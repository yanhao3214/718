<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_15">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_star"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:scaleType="centerCrop"
        android:src="@drawable/xxx1" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_status"
        android:layout_width="@dimen/dp_40"
        android:layout_height="16dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/bg_star_status_owner"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />

    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_toRightOf="@+id/iv_star"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="比特币星球BTC比投入比星球"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_checking"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/user_home_checking"
            android:textColor="@color/colorGrey2"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/layout_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/iv_star"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="2"
        android:maxLines="2"
        android:text="@string/dynamic_text_test"
        android:textColor="@color/colorGrey1"
        android:textSize="@dimen/sp_14" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_elite"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_below="@+id/iv_star"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="19dp"
        android:text="精华333"
        android:textColor="@color/colorGrey2"
        android:textSize="15sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_member"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_alignBaseline="@+id/tv_elite"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/tv_elite"
        android:text="精华 333"
        android:textColor="@color/colorGrey2"
        android:textSize="15sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_push"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_desc"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_discover_join_normal"
        android:text="@string/user_open_push"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_elite"
        android:layout_marginRight="-15dp"
        android:layout_marginTop="20dp"
        android:background="@color/divider_1" />
</RelativeLayout>