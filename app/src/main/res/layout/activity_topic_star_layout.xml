<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/bg_topic_star_head" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/vector_star_back_white" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_detail"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_back"
        android:layout_marginRight="@dimen/dp_10"
        app:srcCompat="@drawable/vector_star_detail_white" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_share"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/iv_back"
        android:layout_toLeftOf="@+id/iv_detail"
        app:srcCompat="@drawable/vector_star_share_white" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/iv_back"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:elevation="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/xxx1" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/iv_back"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/iv_image"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lineSpacingExtra="18dp"
        android:lines="2"
        android:maxLines="2"
        android:text="专注于BTC分析专注于BTC分析专注于BTC分析专注于BTC分析专注于BTC分析专注于BTC分析专注于BTC分析专注于BTC分析专注于BTC分析"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_member"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignLeft="@+id/tv_desc"
        android:layout_below="@+id/tv_desc"
        android:layout_marginTop="8dp"
        android:text="成员 34556"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_bg"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="37dp"
        android:layout_toLeftOf="@+id/tv_join"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:text="对话以太坊回话比特币哈哈哈哈哈哈哈哈"
        android:textColor="@color/colorBlack"
        android:textSize="22sp"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_join"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_bg"
        android:layout_marginRight="15dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/bg_blue_button_selector"
        android:gravity="center"
        android:text="@string/dynamic_join_star"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:visibility="visible" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_push_operate"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_bg"
        android:layout_marginRight="15dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/bg_discover_join_normal"
        android:gravity="center"
        android:text="@string/user_open_push"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/sp_14"
        android:visibility="invisible" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_push_done"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_bg"
        android:layout_marginRight="15dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/bg_discover_join_done"
        android:gravity="center"
        android:text="@string/user_open_push_done1"
        android:textColor="@color/colorGrey2"
        android:textSize="@dimen/sp_14"
        android:visibility="invisible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/bg_search_edit" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_topic"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="41dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/tab_topic"
        android:background="@color/colorGrey4" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_topic"
        android:layout_marginTop="0.5dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_tweet"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="27dp"
        android:layout_marginRight="17dp"
        android:elevation="@dimen/dp_5"
        android:src="@drawable/bg_star_tweet_selector" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_tweet_enable"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="27dp"
        android:layout_marginRight="17dp"
        android:elevation="@dimen/dp_5"
        android:visibility="gone"
        app:srcCompat="@drawable/vector_star_tweet_enable" />
</RelativeLayout>