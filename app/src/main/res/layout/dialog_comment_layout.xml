<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/edt_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/bg_discover_join_done"
        android:gravity="left|top"
        android:hint="@string/dynamic_publish_comment"
        android:lineSpacingExtra="6dp"
        android:lines="3"
        android:paddingBottom="7dp"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="7dp"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorGrey4"
        android:textSize="@dimen/sp_16" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/edt_comment"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_10"
        android:scaleType="centerCrop" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_count_down"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_below="@+id/edt_comment"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toLeftOf="@+id/tv_publish"
        android:text="-10"
        android:textColor="@color/color_orange"
        android:textSize="@dimen/sp_16" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_publish"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edt_comment"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:text="@string/dynamic_comment_publish"
        android:textColor="@color/colorGrey3"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>