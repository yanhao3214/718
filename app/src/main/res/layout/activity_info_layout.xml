<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/statusBarSize"
        android:background="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="28dp"
        android:paddingRight="28dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_portrait"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68dp"
            app:srcCompat="@drawable/vector_user_portrait" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_camera"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@+id/iv_portrait"
            android:layout_alignRight="@+id/iv_portrait"
            app:srcCompat="@drawable/vector_camera" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/iv_portrait"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@null"
            android:gravity="center"
            android:inputType=""
            android:maxLength="15"
            android:text="手机用户3w23v"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/edt_name"
            android:background="@color/colorGrey4" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_notice"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_below="@+id/edt_name"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/vector_notice"
            android:drawablePadding="6dp"
            android:text="@string/login_name_repeated"
            android:textColor="@color/color_orange"
            android:textSize="@dimen/sp_12"
            android:visibility="invisible" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_enter"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@+id/edt_name"
            android:layout_marginTop="96dp"
            android:background="@drawable/bg_blue_button_selector"
            android:text="@string/login_enter_app"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>
