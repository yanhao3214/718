<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="78dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_image"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@drawable/xxx1" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/iv_image"
        android:ellipsize="end"
        android:lines="1"
        android:text="计然多多公链交流不同"
        android:textColor="@color/textDark1"
        android:textSize="@dimen/sp_16" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="5dp"
        android:text="成员 333"
        android:textColor="@color/textDark3"
        android:textSize="@dimen/sp_14" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_join"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_discover_join_normal"
        android:text="@string/home_discover_join"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/sp_14" />

</RelativeLayout>


