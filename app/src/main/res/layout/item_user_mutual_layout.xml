<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/xxx2" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_user"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/iv_user"
        android:lines="1"
        android:text="对话以太坊ETH"
        android:textColor="@color/textDark"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_user"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toLeftOf="@+id/tv_done"
        android:layout_toRightOf="@+id/iv_user"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:text="区块链安全直播赵伟专场"
        android:textColor="@color/textGrey"
        android:textSize="11sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_operate"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_discover_join_normal"
        android:drawableLeft="@drawable/vector_concern"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:paddingLeft="7dp"
        android:text="@string/user_center_concern"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/sp_12"
        android:visibility="gone" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_done"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_discover_join_done"
        android:drawableLeft="@drawable/vector_concern_done"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:paddingLeft="7dp"
        android:text="@string/user_concern_done"
        android:textColor="@color/colorGrey2"
        android:textSize="@dimen/sp_12"
        android:visibility="visible" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_mutual"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg_discover_join_done"
        android:drawableLeft="@drawable/vector_concern_mutual"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:paddingLeft="4dp"
        android:text="@string/user_concern_mutual"
        android:textColor="@color/colorGrey2"
        android:textSize="11sp"
        android:visibility="gone" />

</RelativeLayout>